<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="#35af6a"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:visibility="gone"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="12"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/backimg"
            android:layout_width="20dp"

            android:layout_height="20dp"
            android:src="@drawable/ic_back_arrow"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            ></ImageView>

    <TextView
        android:id="@+id/clientname"
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Ahmed Mohamed"
        android:textColor="#ffffff"
        android:textSize="17.9sp"
        android:textStyle="bold"
         />

        <ImageView
            android:id="@+id/editimg"
            android:layout_width="20dp"

            android:layout_height="20dp"
            android:src="@drawable/ic_edit"
            android:layout_gravity="center"
            ></ImageView>

    </LinearLayout>



    <TextView
        android:id="@+id/clientemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ahmed@swira.design"
        android:textColor="#ffffff"
        android:textSize="11.5sp"
        android:textStyle="normal"
        android:layout_marginLeft="40dp"
        />

    <TextView
        android:id="@+id/clientmobil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="010_1200_4006"
        android:textColor="#ffffff"
        android:textSize="11.5sp"
        android:textStyle="normal"
        android:layout_marginLeft="40dp"
        />

    <TextView
        android:id="@+id/clientcityarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City, Area"
        android:textColor="#ffffff"
        android:textSize="11.5sp"
        android:textStyle="normal"
        android:layout_marginLeft="40dp"
        />

    <ImageView
        android:id="@+id/disimgs"
        android:layout_width="15dp"
        android:layout_height="23dp"
        android:src="@drawable/ic_brile"
        android:tint="#fff"
        android:layout_marginLeft="40dp"

        ></ImageView>

    <!--<de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/disimgs"
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_disabilites"
        app:civ_border_width="2dp"
        android:scaleType="center"
        app:civ_border_color="#FFf"/>-->


</LinearLayout>
