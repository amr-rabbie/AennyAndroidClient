<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="16"
        tools:context=".ui.aenny.signin.LoginActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Reset password"
            android:textStyle="bold"
            android:textSize="22.8sp"
            android:textColor="#35af6a"
            android:gravity="center"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"></LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:src="@drawable/ic_change"
            android:layout_gravity="center"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"></LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            >

        <EditText
            android:id="@+id/oldpass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:textStyle="normal"
            android:textSize="15.4sp"
            android:textColor="#808080"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:background="@mipmap/rounded_rectangle_21"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:drawableLeft="@drawable/ic_password"
            android:hint=" Old password"
            android:textColorHint="#808080"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"></EditText>

        <ImageView
            android:id="@+id/seenimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_unseen"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="45dp"
            android:layout_gravity="right|center_vertical"
            android:visibility="visible"
            ></ImageView>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"></LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            >


            <EditText
                android:id="@+id/newpass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@mipmap/rounded_rectangle_21"
                android:drawableLeft="@drawable/ic_password"
                android:gravity="center_vertical"

                android:hint=" New password"

                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="#808080"
                android:textColorHint="#808080"
                android:textSize="15.4sp"
                android:textStyle="normal"></EditText>

            <ImageView
                android:id="@+id/seenimg2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_unseen"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="45dp"
                android:layout_gravity="right|center_vertical"
                android:visibility="visible"
                ></ImageView>



        </FrameLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"></LinearLayout>







        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:textStyle="bold"
            android:textSize="19.5sp"
            android:textColor="#fff"
            android:background="@mipmap/rounded_rectangle_2"
            android:layout_gravity="center"
            android:layout_marginRight="75dp"
            android:layout_marginLeft="75dp"
            android:text="Save"
            ></Button>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></LinearLayout>


    </LinearLayout>
</layout>