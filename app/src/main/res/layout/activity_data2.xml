<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="design.swira.aennyapp.ui.test2.WDataViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.test2.DataActivity">

        <TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="city"
            android:textStyle="bold"
            android:textSize="21sp"
            android:textColor="#000"
            android:layout_margin="3dp"></TextView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="longttidue"
                android:textStyle="normal"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_margin="3dp"></TextView>

            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="lattidue"
                android:gravity="center"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_margin="3dp"></TextView>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/longttidue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="longttidue"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_margin="3dp"></TextView>

            <TextView
                android:id="@+id/lattidue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="lattidue"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_margin="3dp"></TextView>


        </LinearLayout>

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="center"
            android:layout_gravity="center"></ImageView>

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="city"
            android:textStyle="bold"
            android:textSize="21sp"
            android:textColor="#00f"
            android:layout_margin="3dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="temp"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_margin="3dp"></TextView>

            <TextView
                android:id="@+id/temp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="temp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#f00"
                android:layout_margin="3dp"></TextView>


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="humdity"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_margin="3dp"></TextView>

            <TextView
                android:id="@+id/humdity"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="humdity"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_margin="3dp"></TextView>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="pressure"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_margin="3dp"></TextView>

            <TextView
                android:id="@+id/pressure"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="pressure"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_margin="3dp"></TextView>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="wind"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_margin="3dp"></TextView>

            <TextView
                android:id="@+id/wind"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="wind"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_margin="3dp"></TextView>


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="clouds"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_margin="3dp"></TextView>

            <TextView
                android:id="@+id/clouds"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="clouds"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_margin="3dp"></TextView>


        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="min temp"
                android:textStyle="normal"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_margin="3dp"></TextView>

            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="max temp"
                android:gravity="center"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_margin="3dp"></TextView>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/mintemp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="min temp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#f00"
                android:layout_margin="3dp"></TextView>

            <TextView
                android:id="@+id/maxtemp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="max temp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#f00"
                android:layout_margin="3dp"></TextView>


        </LinearLayout>


    </LinearLayout>
</layout>