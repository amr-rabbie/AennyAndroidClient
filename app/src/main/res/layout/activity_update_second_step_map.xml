<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="18"
    tools:context=".ui.aenny.mainpage.MainClientActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="vertical"
        >
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        tools:context=".ui.aenny.ongonigtrip.UpdateSecondStepMapActivity" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical"
            >


            <ImageView
                android:id="@+id/curplace"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_current_location_1"
                android:layout_marginTop="120dp"
                android:layout_marginRight="15dp"


                />

            <ImageView
                android:id="@+id/changestyle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_map_switch_real"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"


                />

        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:background="@drawable/ic_square"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"

            >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="25dp"
                android:gravity="left"
                android:text="Riders"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="#808080"
                android:textColorHint="#3a3a39"
                android:textSize="11.6sp"
                android:textStyle="normal"></TextView>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2"
            >


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"


                >

                <Spinner
                    android:id="@+id/disabiliy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:background="@mipmap/rounded_rectangle_21"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="15dp"
                    android:prompt="@string/livingcity"
                    android:paddingLeft="25dp"
                    android:textDirection="ltr"
                    ></Spinner>

                <ImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_arrow2"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right|center_vertical"
                    android:visibility="visible"
                    ></ImageView>

                <ImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_disabled"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="35dp"
                    android:layout_gravity="left|center_vertical"
                    android:visibility="visible"
                    ></ImageView>



            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"


                >

                <Spinner
                    android:id="@+id/healthy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:background="@mipmap/rounded_rectangle_21"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="25dp"
                    android:prompt="@string/livingcity"
                    android:paddingLeft="35dp"
                    android:textDirection="ltr"
                    ></Spinner>

                <ImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_arrow2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="35dp"
                    android:layout_gravity="right|center_vertical"
                    android:visibility="visible"
                    ></ImageView>

                <ImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_person"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="35dp"
                    android:layout_gravity="left|center_vertical"
                    android:visibility="visible"
                    ></ImageView>



            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="vertical"
            ></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5"
            >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"


                >

                <Spinner
                    android:id="@+id/paymentmethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:background="@mipmap/rounded_rectangle_21"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="25dp"
                    android:prompt="@string/livingcity"
                    android:paddingLeft="35dp"
                    android:textDirection="ltr"
                    ></Spinner>

                <ImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_arrow2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="35dp"
                    android:layout_gravity="right|center_vertical"
                    android:visibility="visible"
                    ></ImageView>

                <ImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_shape_959"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="35dp"
                    android:layout_gravity="left|center_vertical"
                    android:visibility="visible"
                    ></ImageView>



            </FrameLayout>

            <ImageView
                android:id="@+id/schdule"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="52dp"
                android:src="@drawable/ic_calender"
                android:paddingRight="25dp"
                android:visibility="invisible"
                ></ImageView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="vertical"
            ></LinearLayout>


        <Button
            android:id="@+id/go"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:textStyle="bold"
            android:textSize="19.5sp"
            android:textColor="#fff"
            android:background="@mipmap/rounded_rectangle_2"
            android:layout_gravity="center"
            android:layout_marginRight="75dp"
            android:layout_marginLeft="75dp"
            android:text="Next"
            ></Button>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="vertical"
            ></LinearLayout>




    </LinearLayout>

</LinearLayout>