<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="35dp"
    app:cardUseCompatPadding="true"
    android:elevation="1dp"
    app:cardElevation="1dp"
    android:layout_margin="2dp"
    app:cardBackgroundColor="#d1f1df"
    android:background="#d1f1df"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout

        android:id="@+id/cview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d1f1df"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="9"
            android:layout_gravity="center"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:weightSum="7">



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:layout_margin="3dp"
                        >

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="10:00 AM"
                            android:textColor="#3a3a39"
                            android:textSize="15.4sp"
                            android:paddingRight="7dp"
                            android:paddingLeft="7dp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="7dp"
                            android:paddingLeft="7dp"
                            android:text="Saturday, 30 Novembe"
                            android:textColor="#3a3a39"
                            android:textSize="11.4sp"
                            android:textStyle="normal"></TextView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_margin="3dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_disabled"></ImageView>


                            <TextView
                                android:id="@+id/handcup"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"

                                android:text="1 Rider"
                                android:textColor="#3a3a39"
                                android:textSize="11.5sp"
                                android:textStyle="bold"></TextView>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_person"></ImageView>


                            <TextView
                                android:id="@+id/healthy"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"

                                android:text="2 Escorts"
                                android:textColor="#3a3a39"
                                android:textSize="11.5sp"
                                android:textStyle="bold"></TextView>


                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_margin="3dp"
                        >

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="$$ SAR"
                            android:textColor="#3a3a39"
                            android:textSize="15.4sp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/pricetype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Fare"
                            android:textColor="#3a3a39"
                            android:textSize="11.4sp"
                            android:textStyle="normal"></TextView>


                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_green_line"
                    android:tint="#35af6a"
                    ></ImageView>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="8">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_drop_off_and_pick"></ImageView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:gravity="start"
                            android:textAlignment="viewStart"
                            android:text="Pickup"
                            android:textColor="#3a3a39"
                            android:textSize="9.6sp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/pickupcity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"

                            android:text="Riyadh"
                            android:textColor="#35af6a"
                            android:textSize="15.4sp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/pickup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"

                            android:text="Lorem Epsom dolor sit amet, consectetur"
                            android:textColor="#3a3a39"
                            android:textSize="11.5sp"
                            android:gravity="start"
                            android:textAlignment="viewStart"
                            android:textStyle="bold"></TextView>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_black_line"

                            ></ImageView>

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:gravity="start"
                            android:textAlignment="viewStart"
                            android:text="Drop-off"
                            android:textColor="#3a3a39"
                            android:textSize="9.6sp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/dropoffcity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"

                            android:text="Jeddah"
                            android:textColor="#35af6a"
                            android:textSize="15.4sp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/dropoff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"

                            android:text="Lorem Epsom dolor sit amet, consectetur"
                            android:textColor="#3a3a39"
                            android:textSize="11.5sp"
                            android:gravity="start"
                            android:textAlignment="viewStart"
                            android:textStyle="bold"></TextView>



                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_green_line"
                    android:tint="#35af6a"
                    ></ImageView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    >

                    <!--<ImageView
                        android:id="@+id/busimg"
                        android:layout_width="50dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_aenny_bus_icon"
                        ></ImageView>-->

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/busimg"
                        android:layout_width="50dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_aenny_bus_icon"
                        app:civ_border_width="1dp"
                        app:civ_border_color="#FF000000"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >


                        <LinearLayout
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                >

                        <TextView
                            android:id="@+id/vechialtype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mercedes Benz"
                            android:textSize="12.1sp"
                            android:textStyle="bold"
                            android:textColor="#35af6a"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:padding="6dp"
                            android:gravity="start"
                            android:textAlignment="viewStart"
                            ></TextView>
                        <TextView
                            android:id="@+id/vechialmodel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sprinter Mobility 2018"
                            android:textSize="9.1sp"
                            android:textStyle="normal"
                            android:textColor="#3a3a39"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:padding="5dp"
                            android:gravity="start"
                            android:textAlignment="viewStart"
                            ></TextView>

                            </LinearLayout>

                        <TextView
                            android:id="@+id/plateno"
                            android:text="Plate No."
                            android:textColor="#3a3a39"
                            android:textStyle="normal"
                            android:textSize="12.1sp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"

                            ></TextView>

                        </LinearLayout>


                        <RatingBar
                            android:id="@+id/vechialrating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:numStars="5"
                            android:isIndicator="true"
                            android:progressTint="#ddd91a"
                            ></RatingBar>

                    </LinearLayout>




                </LinearLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_green_line"
                    android:tint="#35af6a"
                    ></ImageView>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    >
                    
                    <!--<ImageView
                        android:id="@+id/driverimg"
                        android:layout_width="50dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_notify_icon"
                        ></ImageView>-->

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/driverimg"
                        android:layout_width="50dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_notify_icon"
                        app:civ_border_width="1dp"
                        app:civ_border_color="#FF000000"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

             

                <TextView
                    android:id="@+id/drivername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mohamed Ahmed Ali"
                    android:textSize="15.1sp"
                    android:textStyle="bold"
                    android:textColor="#35af6a"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="6dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    ></TextView>

                <RatingBar
                    android:id="@+id/driverrating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:numStars="5"
                    android:progressTint="#ddd91a"
                    android:isIndicator="true"

                    ></RatingBar>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/edit"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Edit"
                    android:textColor="#353939"
                    android:textSize="15.5sp"
                    android:textStyle="normal"
                    android:gravity="center"

                    android:visibility="gone"
                    android:background="#0c66f0"

                    ></TextView>

                <TextView
                    android:id="@+id/delete"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:textColor="#353939"
                    android:textSize="15.5sp"
                    android:textStyle="normal"
                    android:gravity="center"

                    android:visibility="gone"
                    android:background="#ea0000"

                    ></TextView>

            </LinearLayout>




        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>