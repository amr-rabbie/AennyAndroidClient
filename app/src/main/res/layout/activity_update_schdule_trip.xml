<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="12"
        tools:context=".ui.aenny.ongonigtrip.UpdateSchduleTripActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Scheduled"
            android:textStyle="bold"
            android:textSize="22.8sp"
            android:textColor="#35af6a"
            android:gravity="center"></TextView>

        <!--<CalendarView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="7"></CalendarView>-->


        <com.applandeo.materialcalendarview.CalendarView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:type="one_day_picker"
            app:headerColor="#35af6a"
            app:selectionColor="#35af6a"
            app:disabledDaysLabelsColor="#92a69a"
            app:pagesColor="#d1f1df"
            app:headerLabelColor="#d1f1df"
            android:layout_weight="7" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"

            ></LinearLayout>


        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textStyle="normal"
            android:textSize="15.4sp"
            android:textColor="#808080"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:background="@mipmap/rounded_rectangle_21"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:drawableLeft="@drawable/ic_time"
            android:hint=" Time*"
            android:textColorHint="#808080"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginBottom="15dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"

            ></LinearLayout>

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:textStyle="bold"
            android:textSize="19.5sp"
            android:textColor="#fff"
            android:background="@mipmap/rounded_rectangle_2"
            android:layout_gravity="center"
            android:layout_marginRight="75dp"
            android:layout_marginLeft="75dp"
            android:text="Update"></Button>


    </LinearLayout>
</layout>